{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "OTA update ",
      "type": "shell",
      "command": "eas",
      "args": [
        "update",
        "--branch",
        "production",
        "--message",
        "${input:updateMessage}"
      ],
      "group": {
        "kind": "build"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build AAB",
      "type": "shell",
      "command": "gh",
      "args": ["workflow", "run", "android-production-release.yml"],
      "group": {
        "kind": "build"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build APK",
      "type": "shell",
      "command": "gh",
      "args": ["workflow", "run", "android-preview-release.yml"],
      "group": {
        "kind": "build"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "build + submit",
      "type": "shell",
      "command": "eas",
      "args": [
        "build",
        "--platform",
        "android",
        "--profile",
        "production",
        "--auto-submit"
      ],
      "group": {
        "kind": "build"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ],
  "inputs": [
    {
      "id": "updateMessage",
      "type": "promptString",
      "description": "Enter the update message",
      "default": "changes"
    }
  ]
}
