{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sync app.json version from package.json",
      "type": "shell",
      "command": "node",
      "args": ["scripts/sync-app-version.mjs"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "new",
        "close": true
      }
    },
    {
      "label": "Bump Version (OTA patch)",
      "type": "shell",
      "command": "bun",
      "args": ["x", "npm", "version", "patch", "--no-git-tag-version"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "new",
        "close": true
      }
    },
    {
      "label": "OTA update ",
      "type": "shell",
      "command": "eas",
      "args": [
        "update",
        "--branch",
        "production",
        "--message",
        "${input:updateMessage}"
      ],
      "dependsOn": [
        "Bump Version (OTA patch)",
        "Sync app.json version from package.json"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "close": true
      }
    },
    {
      "label": "Build AAB",
      "type": "shell",
      "command": "gh",
      "args": ["workflow", "run", "android-production-release.yml"],
      "dependsOn": ["Sync app.json version from package.json"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "close": true
      }
    },
    {
      "label": "Build APK",
      "type": "shell",
      "command": "gh",
      "args": ["workflow", "run", "android-preview-release.yml"],
      "dependsOn": ["Sync app.json version from package.json"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "close": true
      }
    },
    {
      "label": "Bump Version (Build minor+patch)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "bun x npm version minor --no-git-tag-version; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }; bun x npm version patch --no-git-tag-version"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "new",
        "close": true
      }
    },
    {
      "label": "build + submit",
      "type": "shell",
      "command": "eas",
      "args": [
        "build",
        "--platform",
        "android",
        "--profile",
        "production",
        "--auto-submit"
      ],
      "dependsOn": [
        "Bump Version (Build minor+patch)",
        "Sync app.json version from package.json"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "close": true
      }
    }
  ],
  "inputs": [
    {
      "id": "updateMessage",
      "type": "promptString",
      "description": "Enter the update message",
      "default": "changes"
    }
  ]
}
